<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartingFragment"
    android:gravity="center">

    <TextView
        android:id="@+id/first_page_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorGrey"
        />
    <TextView
        android:id="@+id/first_page_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_page_welcome"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/first_page_app_name"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/first_page_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_page_question"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/first_page_welcome"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/first_page_log_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starting_page_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/first_page_question"
        android:background="@color/colorLightBlue"
        android:width="200dp"
        android:layout_marginBottom="25dp"
        android:textColor="@color/colorWhite"
        />


</RelativeLayout>