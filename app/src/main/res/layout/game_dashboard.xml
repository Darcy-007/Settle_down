<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/game_dashboard_back_button"
    android:src="@drawable/ic_arrow_back_black_24dp"
    android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select a game"
        android:id="@+id/game_dashboard_text"
        android:layout_alignLeft="@+id/game_dashboard_buttons"
        android:textSize="28dp"
        android:layout_margin="10dp"
        android:layout_above="@id/game_dashboard_buttons"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_dashboard_buttons"
        android:layout_centerInParent="true">
    <Button
        style="@style/game_dashboard_button_style"
        android:id="@+id/game_dashboard_math"

        android:text="M"
        />
    <Button
        style="@style/game_dashboard_button_style"
        android:layout_toRightOf="@id/game_dashboard_math"
        android:id="@+id/game_dashboard_computer"
        android:textColor="@color/colorWhite"
        android:text="C"
        />
    <Button
        style="@style/game_dashboard_button_style"
        android:id="@+id/game_dashboard_dice"
        android:layout_below="@id/game_dashboard_math"
        android:textColor="@color/colorWhite"
        android:text="D"
        />
    <Button
        style="@style/game_dashboard_button_style"
        android:id="@+id/game_dashboard_typing"
        android:layout_toRightOf="@id/game_dashboard_dice"
        android:layout_below="@id/game_dashboard_computer"
        android:text="T"
        />
    </RelativeLayout>


</RelativeLayout>